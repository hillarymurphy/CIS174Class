<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Olympic Games List</title>
    <link rel="stylesheet" type="text/css"
          href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom.css" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/popper.js/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

    <script src="~/lib/jquery-validate/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/
                       jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-sm bg-light navbar-light fixed-top">
            <a class="navbar-brand" href="/">Olympic Games</a>
            <button class="navbar-toggler" type="button"
                    data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <nav class="collapse navbar-collapse" id="navbarSupportedContent">
                <div class="navbar-nav mr-auto">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a asp-area="" asp-controller="movie" asp-action="index" class="nav-link">Movie List</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="ContactList" asp-controller="contact" asp-action="index" class="nav-link">Contact List</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="FutureValue" asp-controller="userage" asp-action="index" class="nav-link">User Age</a>
                        </li>
                    </ul>
                </div>
                @using Microsoft.AspNetCore.Identity
                @inject SignInManager<User> signInManager
                @if (signInManager.IsSignedIn(User))
                {
                    // signed in user - Log Out button and username
                    <form asp-area="Agile" asp-action="LogOut" method="post" asp-controller="Account">
                    <div class="navbar-nav navbar-right btn btn-outline-dark">
                        <a method="post" asp-action="LogOut" asp-controller="Account" asp-area="Agile">
                            Log Out
                        </a>
                    </div>
                    </form>
                    <div class="navbar-nav navbar-right navbar-text">
                        <span class="text-dark">@User.Identity.Name</span>
                    </div>
                }
                else
                {

                    var action = ViewContext.RouteData.Values["action"]?.ToString();

                    <div class="nav-item @Nav.Active("Register", action)">
                        <a asp-action="Register" asp-controller="Account"
                           asp-area="Agile" class="nav-link">
                            <span class="fas fa-edit"></span>&nbsp;Register
                        </a>
                    </div>
                    <div class="navbar-nav navbar-right btn btn-outline-dark">
                        <a class="nav-link" asp-action="Login" asp-controller="Account"
                           asp-area="Agile">Log In</a>
                    </div>
                }
                <div class="navbar-nav navbar-right">
                    <a class="nav-link"
                       asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a>
                </div>
                </nav>
        </nav>
        <div>
            @RenderBody()
        </div>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        @RenderSection("scripts", false)
    </body>
</html>
