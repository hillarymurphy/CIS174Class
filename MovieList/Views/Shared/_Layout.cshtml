<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css"
          href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom.css" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/popper.js/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

    <script src="~/lib/jquery-validate/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/
                       jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-sm bg-light navbar-light fixed-top">
            <a class="navbar-brand" href="/">@ViewBag.Title</a>
            <button class="navbar-toggler" type="button"
                    data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <nav class="collapse navbar-collapse" id="navbarSupportedContent">
                <div class="navbar-nav mr-auto">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a asp-area="" asp-controller="home" asp-action="index" class="nav-link">Home</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="home" asp-action="default" class="nav-link">Default Routing</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="home" asp-action="attribute" class="nav-link">Attribute Routing</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="home" asp-action="custom" class="nav-link" asp-route-id="Custom">Custom Routing</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" >Dropdown <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a asp-area="" asp-controller="student" asp-action="index" class="nav-link">Assignment 6.1</a></li>
                                <li><a asp-area="OlympicGames" asp-controller="country" asp-action="index" class="nav-link">Assignment 7.1</a></li>
                                <li><a asp-area="Agile" asp-controller="ticket" asp-action="index" class="nav-link">Assignment 10 - Agile</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="navbar-nav navbar-right">
                    <a class="nav-link"
                       asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a>
                </div>
            </nav>
        </nav>
    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>
