@model List<Student>

@{
    ViewBag.Title = "Student Grades";
}

@if (ViewBag.Access < 2)
{
    <h2>Student List</h2>
    <h3>You do not have sufficient access level to view this data.</h3>
}
else if (ViewBag.Access < 8)
{
    <h2>Student List</h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.FirstName</td>
                    <td>@student.LastName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2>Hello Admin</h2>
    <h2>Student List</h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Grade</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.FirstName</td>
                    <td>@student.LastName</td>
                    <td>@student.Grade</td>
                </tr>
            }
        </tbody>
    </table>
}

